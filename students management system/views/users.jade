extends layout
block content
    link(rel="stylesheet",href="style/bootstrap.css")
    button.showinsert.btn.btn-primary 添加数据
    table.tab.table.table-hover.table-striped
        thead
            th 用户名
            th 邮箱
            th 密码
            th 修改
            th 删除
        tbody
    #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                    h4#myModalLabel.modal-title 添加/修改用户信息
                .modal-body
                    form#myform
                        .form-group
                            label 用户名：
                            input.form-control(type='text', name='username')
                        .form-group
                            label 邮箱：
                            input.num.form-control(type='text', name='email')
                        .form-group
                            label 密码:
                            input.form-control(type='text', name='password')
                        button.btn.btn-default(type='button', data-dismiss='modal') 关闭
                        button.c.btn.btn-primary(type='submit') 添加
    script(src='script/jquery.js')
    script(src='script/bootstrap.min.js')
    script(src='script/users.js')